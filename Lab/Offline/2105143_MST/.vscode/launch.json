{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Your Configuration",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/your_executable",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // Use "true" for an external console, "false" for integrated terminal
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "your_compile_task",
            "miDebuggerPath": "/path/to/gdb"
        }
    ]
}
